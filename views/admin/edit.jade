extends ../layout

block content
  h2 Edit Blog: #{blog.title}
  form(action="/admin/" + blog._id + "/edit" method="post")
    input(type="text" name="title" value=blog.title)
    p
    input(type="date" name="date" value=blog.date)
    p
    textarea(id="content" name="content") #{blog.content}
    p
    input(type="submit" class="button" value="Save")  
    p
    a(href="/admin") cancel
